<tr>
  <td><%= post.id %></td>
  <td><%= post.overtime_request %></td>
  <td><%= post.date %></td>
  <td><%= post.user.full_name %></td>
  <td><%= link_to truncate(post.rationale), post %></td>
  <td><%= status_label post.status %></td>
  <td>
    <%= link_to "", edit_post_path(post), id: "edit_#{post.id}", class: "glyphicon glyphicon-pencil ot-icons" if policy(post).update? %>
  </td>
  <td>
    <%= link_to "", post_path(post), method: :delete,
      id: "delete_#{post.id}", class: "glyphicon glyphicon-trash ot-icons",
      data: { confirm: "Are you sure?" } %>
</td>
</tr>
